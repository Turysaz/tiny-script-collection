
# shortcuts
alias lh="ls -l -h"
alias la="ls -a"
alias dd="dd status=progress"

alias g="git"
alias gg="git graph1"

alias cl="conflicts-list"
alias ce="conflicts-edit"
alias ca="conflicts-add"

# custom commands
export ALARM="/usr/share/sounds/freedesktop/stereo/alarm-clock-elapsed.oga"
export BEEP="/usr/share/sounds/freedesktop/stereo/complete.oga"
alias beep="paplay $BEEP"
alias alarm="paplay $ALARM"

# load complex custom functions
. ~/.bash_functions.sh



